<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>final_project.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>final_project.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetAllWorkoutsServlet</servlet-name>
        <servlet-class>final_project.GetAllWorkoutsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllWorkoutsServlet</servlet-name>
        <url-pattern>/getAllWorkouts</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetLikedWorkoutsServlet</servlet-name>
        <servlet-class>final_project.GetLikedWorkoutsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetLikedWorkoutsServlet</servlet-name>
        <url-pattern>/getLikedWorkouts</url-pattern>
    </servlet-mapping>
    <servlet>
	    <servlet-name>GetRecsServlet</servlet-name>
	    <servlet-class>final_project.GetRecsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>GetRecsServlet</servlet-name>
	    <url-pattern>/getRecs</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>GetUserInfoServlet</servlet-name>
	    <servlet-class>final_project.GetUserInfoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>GetUserInfoServlet</servlet-name>
	    <url-pattern>/getUserInfo</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>LikeWorkoutServlet</servlet-name>
	    <servlet-class>final_project.LikeWorkoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>LikeWorkoutServlet</servlet-name>
	    <url-pattern>/likeWorkout</url-pattern>
	</servlet-mapping>
	<servlet>
	    <servlet-name>RemoveServlet</servlet-name>
	    <servlet-class>final_project.RemoveServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>RemoveServlet</servlet-name>
	    <url-pattern>/remove</url-pattern>
	</servlet-mapping>
	    

    <session-config>
        <session-timeout>30</session-timeout> <!-- Session timeout in minutes -->
    </session-config>

</web-app>
